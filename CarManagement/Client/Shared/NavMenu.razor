@inject CarManagement.Client.Services.ICarsService CarsService

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Car Management Demo</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        @* Home *@
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        @* Cars *@
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="cars">
                <span class="oi oi-list" aria-hidden="true"></span> Cars
            </NavLink>
        </li>

        @* Edit Car *@
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="edit">
                <span class="oi oi-wrench" aria-hidden="true"></span> Edit Car
            </NavLink>
        </li>

        @* Hard Reset *@
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/" @onclick="() => CarsService.HardReset()">
                <span class="oi oi-reload" aria-hidden="true"></span>Hard reset Context
            </NavLink>
        </li>
    </ul>
</div>

@code {
    //Fields
    private bool collapseNavMenu = true;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    //Methoods
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
